<div id="myModal" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Ask A New Question</h4>
      </div>
      <%= form_for :question, url: '/questions', html: {class: 'form-horizontal'} do %>
      <div class="modal-body">
        <!-- <form class="form-horizontal" role="form" action="/questions" method="POST"> -->

          <div class="form-group">
            <label class="control-label col-sm-2" for="email">Email:</label>
            <div class="col-sm-10">
              <input type="email" class="form-control" name="question[email]" id="inputEmail" placeholder="Enter email" required>
            </div>
          </div>
          <div class="form-group">
            <label class="control-label col-sm-2" for="inputQuestion">Question:</label>
            <div class="col-sm-10">
              <textarea class="form-control" id="inputQuestion" name="question[body]" placeholder="What would you like to know" required></textarea>
            </div>
          </div>
          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button type="submit" class="btn btn-default">Submit</button>
              <button type="submit" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
          </div>
      </div>
    <%end%>
    </div>
  </div>
</div>
