<div class="container">
  <% @questions.each do |q| %>
  <div class="media">
    <div class="media-left">
      <a href="#">
        <img class="media-object"
        src="<%= q.gravatar %>"
        alt="...">
      </a>
    </div>
    <div class="media-body">
      <h4 class="media-heading"><%= q.email %> asked</h4>
      <%= q.body %>
      <div>
        <a href="/questions/12" class="btn btn-success btn-xs">View Answers</a>
      </div>
    </div>
  </div>
  <%end%>
</div>
