<div class="container">
  <% @questions.each do |q| %>
  <div class="media">
    <div class="media-left">
      <a href="#">
        <img class="media-object"
        src="<%= q.gravatar %>"
        alt="...">
      </a>
    </div>
    <div class="media-body">
      <h4 class="media-heading"><%= q.email %> asked</h4>
      <div><%= time_ago_in_words q.created_at %></div>
      <%= q.body %>
      <div>
        <a href="<%= question_path(q) %>" class="btn btn-success btn-xs">View Answers</a> <!--a helper to take you to correct path -->
      </div>
    </div>
  </div>
  <%end%>
</div>
